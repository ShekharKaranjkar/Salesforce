<aura:component implements="force:hasRecordId,flexipage:availableForAllPageTypes" access="global">
    
<aura:attribute name="accept" type="List" default="['.jpg', '.jpeg','.png','.exe','.pdf','.doc']"/>
    <aura:attribute name="multiple" type="Boolean" default="true"/>
    <aura:attribute name="disabled" type="Boolean" default="false"/>
      <aura:attribute name="myRecordId" type="string" default=""/>              
    <lightning:fileUpload label="Add attachment" multiple="{!v.multiple}" 
                          accept="{!v.accept}" recordId="{!v.myRecordId}" 
                          onuploadfinished="{!c.handleUploadFinished}" />
    
</aura:component>